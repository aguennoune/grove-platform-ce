# Grove Platform Environment Configuration
# Copy to .env and customize for your environment

# Platform Configuration
GROVE_PLATFORM_VERSION=1.0.0
GROVE_ENVIRONMENT=development
GROVE_LOG_LEVEL=info

# Server Configuration  
GROVE_PORT=3000
GROVE_HOST=localhost

# Database Configuration
GROVE_DB_HOST=localhost
GROVE_DB_PORT=5432
GROVE_DB_NAME=grove_platform
GROVE_DB_USER=grove_user
GROVE_DB_PASSWORD=your_secure_password

# Redis Configuration (for caching and queues)
GROVE_REDIS_HOST=localhost
GROVE_REDIS_PORT=6379
GROVE_REDIS_PASSWORD=

# Security Configuration
GROVE_JWT_SECRET=your_jwt_secret_key_here
GROVE_ENCRYPTION_KEY=your_encryption_key_here

# External Services
GROVE_API_BASE_URL=https://api.grove-platform.netlify.app
GROVE_AUTH_SERVICE_URL=https://auth.grove-platform.netlify.app
GROVE_STORAGE_SERVICE_URL=https://storage.grove-platform.netlify.app
GROVE_WEBHOOKS_SECRET=your_webhooks_secret

# Enterprise Features (if applicable)
GROVE_ENTERPRISE_LICENSE=
GROVE_ENTERPRISE_FEATURES=false

# Cloud Deployment (Google Cloud Platform)
GROVE_GCP_PROJECT_ID=
GROVE_GCP_REGION=us-central1
GROVE_GCP_ZONE=us-central1-a

# Monitoring and Analytics
GROVE_ANALYTICS_ENABLED=true
GROVE_MONITORING_ENABLED=true
GROVE_METRICS_ENDPOINT=

# Community Features
GROVE_COMMUNITY_FEATURES=true
GROVE_TELEMETRY_ENABLED=true
